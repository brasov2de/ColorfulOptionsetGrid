{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",      
      "plugin:react/recommended"
    ],
    "globals": {
      "ComponentFramework": true, 
      "JSX": true
    },  
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-undef": "off", 
      "no-unused-vars": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
